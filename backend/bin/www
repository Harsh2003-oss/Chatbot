#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('backend:server');
var http = require('http');
const {Server} = require('socket.io');
const jwt = require('jsonwebtoken');
const mongoose = require('mongoose');
const projectModel = require('../models/project.model');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);

const io = new Server(server, {
  cors: {
    origin: "*",
    methods: ["GET", "POST"]
  }
});

io.use(async(socket, next) => {
  try {
    const token = socket.handshake.auth?.token || socket.handshake.headers.authorization?.split(' ')[1];
    const projectId = socket.handshake.query.projectId;

    // Validate projectId
    if (!projectId || typeof projectId !== 'string' || !mongoose.Types.ObjectId.isValid(projectId)) {
      console.log('âŒ Authentication error: Invalid or missing projectId');
      return next(new Error("Authentication error: Invalid or missing projectId"));
    }

    // Validate token
    if (!token) {
      console.log('âŒ Authentication error: Missing token');
      return next(new Error("Authentication error: Missing token"));
    }

    // Verify JWT token
    const decoded = jwt.verify(token, process.env.JWT_SECRET);
    if (!decoded) {
      console.log('âŒ Authentication error: Invalid token');
      return next(new Error("Authentication error: Invalid token"));
    }

    // Find project
    const project = await projectModel.findById(projectId);
    if (!project) {
      console.log('âŒ Authentication error: Project not found');
      return next(new Error("Authentication error: Project not found"));
    }

    // Attach user and project to socket
    socket.user = decoded;
    socket.project = project;
    
    console.log('âœ… Authentication successful for project:', projectId);
    next();
    
  } catch (error) {
    console.log('âŒ Authentication error:', error.message);
    next(new Error("Authentication error: " + error.message));
  }
});

// Replace your socket.on('connection') section with this:

io.on('connection', (socket) => {
  console.log('âœ… A user connected! Socket ID:', socket.id);
  console.log('ðŸ“‚ Project ID:', socket.project._id.toString());
  console.log('ðŸ‘¤ User:', socket.user.email || socket.user.id);
  
  socket.roomId = socket.project._id.toString();

  // Join the project room using the ObjectId converted to string
  socket.join(socket.roomId);
  console.log('ðŸšª User joined room:', socket.roomId);
  
  // Log current room members - THIS IS CRUCIAL
  const room = io.sockets.adapter.rooms.get(socket.roomId);
  console.log(`ðŸ“Š Room ${socket.roomId} now has ${room ? room.size : 0} members`);
  
  // Replace your socket.on('event', (data) => { ... }) handler with this:

socket.on('event', (data) => {
  console.log('ðŸ“¨ Received event from client:', data);
  console.log('ðŸ“‚ From project:', socket.project.name);
  console.log('ðŸ‘¤ From user:', socket.user.email || socket.user.id || socket.user._id);
  
  // Check current room state
  const currentRoom = io.sockets.adapter.rooms.get(socket.roomId);
  console.log('ðŸ“Š Broadcasting to room with', currentRoom ? currentRoom.size : 0, 'members');

  // âœ… Fixed: Better handling of user ID from JWT token
  const userId = socket.user.id || socket.user._id || socket.user.userId;
  
  // âœ… Debug: Log the complete user object to see its structure
  console.log('ðŸ” Complete user object from JWT:', JSON.stringify(socket.user, null, 2));

  const messageData = {
    message: data.message,  // âœ… Remove fallback to data directly
    sender: {
      id: userId,  // âœ… Use the properly extracted user ID
      email: socket.user.email
    },
    project: {
      id: socket.project._id,
      name: socket.project.name
    },
    serverTime: new Date().toISOString(),  // âœ… Convert to ISO string
    timestamp: new Date()  // âœ… Add timestamp for client
  };

  // âœ… Debug: Log the message data being sent
  console.log('ðŸ“¤ Message data being broadcast:', JSON.stringify(messageData, null, 2));

  // CRITICAL: Use io.to() instead of socket.broadcast.to()
  console.log('ðŸ“¡ Broadcasting to room:', socket.roomId);
  io.to(socket.roomId).emit('event', messageData);
  console.log('âœ… Message broadcast complete');
});
  socket.on('disconnect', () => {
    console.log('âŒ User disconnected! Socket ID:', socket.id);
    console.log('ðŸ‘¤ User:', socket.user.email || socket.user.id);
    
    // Check room size after disconnect
    setTimeout(() => {
      const room = io.sockets.adapter.rooms.get(socket.roomId);
      console.log(`ðŸ“Š Room ${socket.roomId} now has ${room ? room.size : 0} members`);
    }, 100);
  });
});
// Rest of your code remains the same...
server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

function normalizePort(val) {
  var port = parseInt(val, 10);
  
  if (isNaN(port)) {
    return val;
  }
  
  if (port >= 0) {
    return port;
  }
  
  return false;
}

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }
  
  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;
  
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}